function greet(input){
    
  let product=input[0];
  let town=input[1];
  let qty=Number(input[2]);
  let total=0;

  switch (town) {
    case "Sofia":
      switch (product) {
        case "coffee":
          total=qty*0.50
          break;
        case "water":
          total=qty*0.80
          break;
        case "beer":
          total=qty*1.20
          break;
        case "sweets":
          total=qty*1.45
          break;
        case "peanuts":
          total=qty*1.60
          break;
      }
      break;

    case "Plovdiv":
      switch (product) {
        case "coffee":
          total=qty*0.40
          break;
        case "water":
          total=qty*0.70
          break;
        case "beer":
          total=qty*1.15
          break;
        case "sweets":
          total=qty*1.30
          break;
        case "peanuts":
          total=qty*1.50
          break;
      }
      break;

    case "Varna":
      switch (product) {
        case "coffee":
          total=qty*0.45
          break;
        case "water":
          total=qty*0.70
          break;
        case "beer":
          total=qty*1.10
          break;
        case "sweets":
          total=qty*1.35
          break;
        case "peanuts":
          total=qty*1.55
          break;
      }
      break;
  
    
  }
  
  console.log(total);
  
}
